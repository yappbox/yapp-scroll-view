{
  "name": "yapp-scroll-view",
  "version": "13.0.0",
  "description": "Ember Scrolling components using a Javascript scroller",
  "keywords": [
    "ember-addon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yappbox/yapp-scroll-view.git"
  },
  "license": "MIT",
  "author": "",
  "files": [
    "addon-main.cjs",
    "dist"
  ],
  "scripts": {
    "build": "concurrently \"pnpm:build:*\" --names \"build:\"",
    "build:js": "rollup --config",
    "start": "concurrently \"pnpm:start:*\" --names \"start:\"",
    "start:js": "rollup --config --watch --no-watch.clearScreen",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.9.0",
    "@glimmer/tracking": "^1.1.2",
    "decorator-transforms": "^2.3.0",
    "eventemitter3": "^5.0.1",
    "hammerjs": "^2.0.8",
    "macro-decorators": "^0.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.3",
    "@embroider/addon-dev": "^6.0.0",
    "@glimmer/component": "^1.1.2",
    "@rollup/plugin-babel": "^6.0.4",
    "babel-plugin-ember-template-compilation": "^2.3.0",
    "concurrently": "^9.1.2",
    "rollup": "^4.34.0"
  },
  "peerDependencies": {
    "@ember/render-modifiers": "^3.0.0",
    "@ember/test-waiters": "^4.1.1",
    "@embroider/macros": "^1.19.1",
    "@html-next/vertical-collection": "4.0.2",
    "ember-collection": "^3.0.0",
    "ember-concurrency": "^4.0.6",
    "ember-modifier": "^4.2.0",
    "ember-on-resize-modifier": "^2.0.2",
    "ember-truth-helpers": "^4.0.3"
  },
  "peerDependenciesMeta": {
    "@html-next/vertical-collection": {
      "optional": true
    },
    "ember-on-resize-modifier": {
      "optional": true
    },
    "ember-truth-helpers": {
      "optional": true
    },
    "ember-collection": {
      "optional": true
    }
  },
  "engines": {
    "node": ">= 20",
    "pnpm": ">= 9"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.cjs",
    "app-js": {
      "./components/collection-scroll-view/index.js": "./dist/_app_/components/collection-scroll-view/index.js",
      "./components/loading-scroll-view.js": "./dist/_app_/components/loading-scroll-view.js",
      "./components/scroll-view.js": "./dist/_app_/components/scroll-view.js",
      "./components/vertical-scroll-bar.js": "./dist/_app_/components/vertical-scroll-bar.js",
      "./helpers/dynamic-image.js": "./dist/_app_/helpers/dynamic-image.js",
      "./helpers/emitter-action.js": "./dist/_app_/helpers/emitter-action.js",
      "./helpers/html-safe.js": "./dist/_app_/helpers/html-safe.js",
      "./services/scroll-position-memory.js": "./dist/_app_/services/scroll-position-memory.js"
    }
  },
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js",
    "./addon-main.js": "./addon-main.cjs"
  },
  "volta": {
    "node": "20.19.5",
    "pnpm": "9.15.9"
  },
  "packageManager": "pnpm@9.15.9"
}
